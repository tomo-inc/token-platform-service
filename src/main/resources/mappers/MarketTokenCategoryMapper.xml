<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tomo.mapper.MarketTokenCategoryMapper">

    <resultMap id="MarketTokenCategoryResultMap" type="com.tomo.model.market.MarketTokenCategory">
        <id property="id" column="id"/>
        <result property="coinId" column="coin_id"/>
        <result property="chainIndex" column="chain_index"/>
        <result property="address" column="address"/>
        <result property="category" column="category"/>
        <result property="tags" column="tags" typeHandler="com.tomo.mapper.type.StringArrayTypeHandler"/>
        <result property="updateTime" column="update_time"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, coin_id, chain_index, address, category, tags, update_time, create_time
    </sql>

    <select id="selectMarketTokenCategoryById" resultMap="MarketTokenCategoryResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM market_token_category
        WHERE id = #{id}
    </select>
    <select id="queryByCoinIds" resultMap="MarketTokenCategoryResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM market_token_category
        WHERE coin_id IN
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
    <select id="pageQuery" resultMap="MarketTokenCategoryResultMap"
            parameterType="com.tomo.model.req.MarketTokenCategoryReq">
        SELECT
        <include refid="Base_Column_List"/>
        FROM market_token_category
        WHERE category = #{category}
        <if test="tags != null and tags.size() > 0">
            AND tags == ARRAY[<foreach item="tag" collection="tags" separator="," open="" close="">#{tag}</foreach>]::varchar[]
        </if>
        <if test="chainIndex != null">
            AND chain_index = #{chainIndex}
        </if>
        <if test="address != null and address != ''">
            AND address = #{address}
        </if>
        LIMIT #{pageSize} OFFSET #{pageNum} * #{pageSize}
    </select>

    <insert id="insertMarketTokenCategory" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO market_token_category( coin_id, chain_index, address,category, tags, update_time, create_time)
        VALUES (#{coinId}, #{chainIndex}, #{address}, #{category}, #{tags}, #{updateTime}, #{createTime})
    </insert>

    <update id="updateMarketTokenCategory">
        UPDATE market_token_category
        SET coin_id     = #{coinId},
            chain_index = #{chainIndex},
            address     = #{address},
            category    = #{category},
            tags        = #{tags},
            update_time = #{updateTime},
            create_time = #{createTime}
        WHERE id = #{id}
    </update>

    <delete id="deleteMarketTokenCategory">
        DELETE
        FROM market_token_category
        WHERE id = #{id}
    </delete>

</mapper>